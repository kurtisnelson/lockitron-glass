<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/widget_margin">


    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/widget_lock_button"
        android:layout_gravity="center_vertical|center_horizontal"
        android:background="@android:drawable/ic_lock_lock"
        android:minHeight="20dp"
        android:minWidth="20dp" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/widget_unlock_button"
        android:layout_gravity="center_vertical|center_horizontal"
        android:background="@android:drawable/ic_partial_secure"
        android:layout_above="@+id/textView"
        android:layout_toRightOf="@+id/widget_lock_button"
        android:minHeight="20dp"
        android:minWidth="20dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/app_name"
        android:id="@+id/textView"
        android:layout_gravity="center|bottom"
        android:gravity="center_horizontal"
        android:layout_below="@+id/widget_lock_button"
        android:layout_alignParentLeft="true" />
</RelativeLayout>